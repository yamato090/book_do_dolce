<div class='container px-5 px-sm-0'>
  <div class='row'>
      <h1>レシピ一覧</h1>&emsp;
      <h2><%= link_to '＋新規レシピ登録', new_recipe_path %></h2>
      <table class="table border border-dark">
        <thead>
          <tr>
            <th>レシピ写真</th>
            <th>レシピ説明</th>
            <th>レシピ材料</th>
            <th>レシピ詳細リンク</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
            <tr>
              <td>
                <%= link_to recipe_path(recipe.id) do %>
                  <%= attachment_image_tag recipe, :image, :fill, 150, 150 %>
                <% end %>
                <p><%= link_to recipe.name, recipe_path(recipe.id) %></p>
                <p>
                  <% if recipe.favorited_by?(current_user) %>
                    <%= link_to recipe_favorites_path(recipe), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= recipe.favorites.count %>like
                    <% end %>
                  <% else %>
                    <%= link_to recipe_favorites_path(recipe), method: :post do %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                    <%= recipe.favorites.count %>like
                    <% end %>
                  <% end %>
                </p>
              </td>
              <td><%= recipe.description %></td>
              <td><%= recipe.ingredients %></td>
              <td><%= link_to 'レシピ詳細', recipe_path(recipe), class: "recipe_#{recipe.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <!--kaminariで１０件表示 -->
        <%#= paginate @recipes %>
      </div>
  </div>
</div>