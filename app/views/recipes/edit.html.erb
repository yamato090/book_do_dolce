<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>レシピ編集</h1>
        <%= form_with model:@recipe, url: recipe_path(@recipe), local:true do |f| %>
          <div class="form-group">
            <label for="recipe_image">レシピ画像</label>
            <%= f.attachment_field:image %>
          </div>

          <div class="form-group">
            <label for="recipe_name">レシピ名</label>
            <%= f.text_field:name,  size: 30 %>
          </div>

          <div class="form-group">
            <label for="recipe_description">レシピ説明</label>
            <%= f.text_field :description %>
          </div>

          <div class="form-group">
            <label for="recipe_procedure">レシピ説明（調理手順）</label>
            <%= f.text_field:procedure %>
          </div>

          <div class="form-group">
            <label for="recipe_ingredients">食材</label>
            <%= f.text_field:ingredients %>
          </div>

          <div class="form-group">
            <label for="recipe_calories">カロリー</label>
            <%= f.text_field:calories %>kcal
          </div>

          <div class="form-group">
            <label for="recipe_cost">材料費</label>
            <%= f.text_field:cost %>円
          </div>

          <div class="form-group">
            <%= f.submit '変更を保存' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

