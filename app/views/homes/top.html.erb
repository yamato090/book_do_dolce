<div class="container">
  <div class="example">
    <% @recipes.first(1). each do |recipe| %>
    <tr>
      <td>
        <!--仮の-->
        <div class="main-visual img-fluid text-light p-5 mb-4">
          <%= attachment_image_tag recipe, :image, :fill, 800, 400 %>
          <p>ようこそ、Book de Dolceへ！<br>
            このサイトは、レシピ投稿サイトになります。<br>
            会員でないかたもレシピの閲覧はできますが、<br>
            投稿には会員登録が必要になります。
          </p>
        </div>
      </td>
    </tr>
    <% end %>
      <h2 class="mt-3">新着レシピ</h2>
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-eq-height">
          <% @recipes.first(5). each do |recipe| %>
            <div class="col">
              <div class="card mx-auto mt-4 shadow-lg">
                <%= link_to recipe_path(recipe) do %>
                  <%= attachment_image_tag recipe, :image, size:"250x200", class:"card-img-top cover",fallback:"no_image.jpg" %>
                <% end %>
                <div class="card-body">
                  <h6 class="card-title">
                    <%= link_to recipe.name, recipe_path(recipe.id) %>
                  </h6>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <div class="text-right mt-3">
      <%= link_to "全てのレシピを見る >>", recipes_path, class:"text-secondary" %>
    </div>
  </div>
</div>