<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!--フォロワ一覧を表示-->
      <h1><%= @user.nickname %>さんのフォロワー一覧(全<%= @user.followers.count %>人)</h1>
        <table class="table border border-dark">
          <thead>
            <th>ニックネーム</th>
            <th>レシピ投稿数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th>ユーザー詳細</th>
          </thead>
          <tbody>
          <!--ユーザー情報を表示-->
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.nickname, user_path(user), class: "btn btn-sm btn btn-outline-primary user_#{user.id}" %></td>
              <td>&emsp;&emsp;<%= user.recipes.count %></td>
              <td>&emsp;&emsp;<%= user.followings.count %></td>
              <td>&emsp;&emsp;<%= user.followers.count %></td>
              <td><%= link_to 'ユーザー詳細', user_path(user), class: "btn btn-sm btn btn-outline-primary user_#{user.id}" %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
      <div>
        <!--kaminariで１０件表示 -->
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>